@model ASP_DS.Models.producto_compra

@{
    ViewBag.Title = "Registrar - ProductoCompra";
}

<h2>Registrar Producto Compra</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="id_compra">Fecha Compra:</label>
        <div class="col-md-10">
            @Html.Action("ListarCompra")
            @Html.ValidationMessageFor(model => model.id_compra, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="id_producto">Nombre Producto:</label>
        <div class="col-md-10">
            @Html.Action("ListarProductos")
            @Html.ValidationMessageFor(model => model.id_producto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="cantidad">Cantidad:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Todos", "Index")
</div>
