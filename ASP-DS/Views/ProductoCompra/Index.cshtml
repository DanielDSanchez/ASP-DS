@model IEnumerable<ASP_DS.Models.producto_compra>

@{
    ViewBag.Title = "Lista - Producto Compra";
}

<h2>Lista Producto Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha Compra:
        </th>
        <th>
            Nombre Producto:
        </th>
        <th>
            Cantidad:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ASP_DS.Controllers.ProductoCompraController.FechaCompra(item.id_compra);
            </td>
            <td>
                @ASP_DS.Controllers.ProductoCompraController.nombreProducto(item.id_producto);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class="linkDelete"})
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta Seguro de Eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
    }
