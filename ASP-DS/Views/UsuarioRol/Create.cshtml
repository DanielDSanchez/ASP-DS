@model ASP_DS.Models.usuariorol

@{
    ViewBag.Title = "Registrar UsuarioRol";
}

<h2>Registrar UsuarioRol</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="idUsuario">Nombre Usuario:</label>
        <div class="col-md-10">
            @Html.Action("ListarUsuarios")
            @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="idRol">Rol::</label>
        <div class="col-md-10">
            @Html.Action("ListarRol")
            @Html.ValidationMessageFor(model => model.idRol, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Todos", "Index")
</div>
