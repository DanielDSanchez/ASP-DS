@model IEnumerable<ASP_DS.Models.usuariorol>

@{
    ViewBag.Title = "Lista - UsuarioRol";
}

<h2>Lista Usuario Rol</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Usuario:
        </th>
        <th>
            Rol:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ASP_DS.Controllers.UsuarioRolController.nombreUsuario(item.idUsuario)
            </td>
            <td>
                @ASP_DS.Controllers.UsuarioRolController.nombreRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta Seguro de Eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}
