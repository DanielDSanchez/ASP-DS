@model IEnumerable<ASP_DS.Models.compra>

@{
    ViewBag.Title = "Lista - Compra";
}

<h2>Lista Compra </h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha Compra:
        </th>
        <th>
            Total Compra:
        </th>
        <th>
            Nombre Usuario:
        </th>
        <th>
            Nombre Cliente:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @ASP_DS.Controllers.CompraController.nombreUsuario(item.id_usuario)
            </td>
            <td>
                @ASP_DS.Controllers.CompraController.nombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Reporte","Reporte2")
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta Seguro de Eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}
